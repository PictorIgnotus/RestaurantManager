@model OrderViewModel

@{
    ViewBag.Title = "Rendelés leadása";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-5">
        <form asp-controller="ShoppingCart" asp-action="Transmission" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrdererName">Név</label>
                <input asp-for="OrdererName" class="form-control" />
                <span asp-validation-for="OrdererName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdererAddress">Cím</label>
                <input asp-for="OrdererAddress" class="form-control" />
                <span asp-validation-for="OrdererAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdererPhoneNumber">Telefonszám</label>
                <input asp-for="OrdererPhoneNumber" class="form-control" />
                <span asp-validation-for="OrdererPhoneNumber" class="text-danger"></span>
            </div>

            <button class="btn btn-default" type="submit">Rendelés leadása</button>
            <button asp-controller="ShoppingCart" asp-action="Index" class="btn btn-default" type="submit">Mégse</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}